<h2> Add Comment </h2>

<div class="comment">
	<%= form_for [@concert, @comment] do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :date %>
		<%= f.date_field :date %>
		<br>
		<%= f.label :comment %>
		<%= f.text_area :comment %>
		<br>
		<%= f.button "Comment" %>
		
		<%= @comment.errors.full_messages %>

	<% end %>

</div>