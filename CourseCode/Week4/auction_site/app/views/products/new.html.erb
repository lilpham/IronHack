<h3> New Product for <%=@user.name %> </h3>

<%= form_for [@user, @product] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :deadline %>
	<%= f.datetime_field :deadline %>
	<br>
	<%= f.button %>
<% end %>